{
  "resources": {
    "body": [
      {
        "type": "style",
        "src": "./build/app.css"
      },
      {
        "type": "script",
        "src": "./vendor/tinycolor.js"
      },
      {
        "type": "script",
        "src": "./build/app.js"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["backgroundColor"],
        "execute": "INSTALL_SCOPE.updateColors(INSTALL_OPTIONS)"
      },
      {
        "options": ["shape"],
        "execute": "INSTALL_SCOPE.updateShape(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "backgroundColor": {
        "title": "Background color",
        "description": "Defaults to contrasting color.",
        "order": 0,
        "type": "string",
        "format": "color"
      },

      "shape": {
        "title": "Shape",
        "order": 1,
        "type": "string",
        "default": "rounded",
        "enum": [
          "square",
          "rounded",
          "circle"
        ],
        "enumNames": {
          "square": "Square",
          "rounded": "Rounded",
          "circle": "Circle"
        }
      }
    }
  }
}
